<div class="login">
  <div class="home-title">
      <img src="<%= asset_path('greenback.png') %>" alt="" class='background'>
      <div>
      <%= link_to root_path, class: "backshow" do %>
      <i class="fa-solid fa-arrow-left fa-2xl arrow-show" style="color: #ffffff;"></i>
        <% end %>
        <h1>FOOTY<span class="hub">HUB</span> </h1>
        <h2 >Welcome<br>Back !</h2>
      </div>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean, input_html: { class: 'remember' } if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
