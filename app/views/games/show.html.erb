<div class="background-img-show" style="background-image: url('<%= asset_path('ball.jpg') %>');">
</div>

<div class="wholeshowpage">
  <h5 class="show-card-date"> <%= @game.date.strftime("%m-%e-%y %H:%M")%></h5>
  <h5 class="show-card-location"> <%= @game.location %></h5>
  <h5 class="show-card-host"><%="By #{@game.user.first_name}"%></h5>
  <h5 class="show-card-size">Game Size <%= @game.game_size %>-a-side</h5>
  <h5 class="show-card-price"> Â£<%= @game.price.round %></h5>
  <h5 class="show-card-gender">Gender <%= @game.gender %></h5>

  <p class="show-card-description"><%= "Description: #{@game.description} "%></p>

  <% if @game.players.where({user_id: current_user.id}).length === 0 %>
    <%= link_to "Join Game", game_players_path(@game), class: "join-game-btn", data: { turbo_method: :post } %>
  <% else %>
    <p style="font-size: 20px;">Joined</p>
  <% end %>
</div>
