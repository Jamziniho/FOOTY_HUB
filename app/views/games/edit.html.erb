<div class="background-img-new" style="background-image: url('<%= asset_path('ball.jpg') %>');">
</div>

<h1 class="host-title">EDIT A GAME</h1>

<div class="allpage">
  <div class="new-game-form">
    <div class="form-input-e">
      <%= simple_form_for @game do |f| %>
        <%= f.input :location %>
        <%= f.input :date, html5: true, input_html: { class: "new-date" } %>

        <div class="inline-inputs">
          <div class="form-group">
            <%= f.input :game_size, collection: ["5-a-side", "7-a-side", "9-a-side", "11-a-side"] %>
          </div>
          <div class="form-group">
            <%= f.input :level, collection: ["Amatuer", "Casual", "Decent", "Advanced", "Any"] %>
          </div>
        </div>

        <%= f.input :price %>
        <%= f.input :gender, collection: ["Male", "Female", "Any"] %>
        <%= f.input :description, input_html: {class: 'description', rows: 1} %>
        <%= f.submit "Save Changes", class: "btn btn-primary" %>
        <%= link_to dashboard_path, class: "confirm-btn" do %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
