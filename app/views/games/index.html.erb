<div class="wholepage">
  <div class="heading-container">
    <h1 class="headerone"> Available: <small class="results-count"><%= @games.length %> Results</small></h1>
  </div>

<div class="row justify-content-center searchbar">
  <div class="col-sm-8 my-3">
    <%= form_with url: games_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Type a location"
        %>
      <%= submit_tag "Search" , name: "", class: " btn-fcard" %>
    <% end %>
  </div>
</div>

<div class="row full-games-card">
  <% @games.each do |game| %>
    <div class="col-md-6">
      <div class="game-card">
        <div class="game-card-body d-flex justify-content-between">
          <!-- Car image column -->
          <div class="col-md-10 car-div d-flex">
              <div class="description-title">
                <h5 class="game-card-title"><%= "#{game.location}" %></h5>
                <h4 class="game-card-date"><%= "#{game.date}" %></h4>
                <div class="d-flex">
                  <p class="p1"><%= "#{game.game_size}"%></p>
                </div>
              </div>
              <div class="col-md-2 d-flex justify-content-end">
                <div class="text-end game-price">
                  <p class="price-text">Â£<%= "#{game.price.round} / day" %></p>
                  <%= link_to "Select",game_path(game), class: "btn-fcard" %>
                </div>
              </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
