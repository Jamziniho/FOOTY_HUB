<div class="index-background-img h-100" style="background-image: url('<%= asset_path('background-img.jpg') %>');">
      <div class="index-title">
        <h1 class= "index-headerone d-flex justify-content-center" > FOOTY<span class="hub">HUB</span> </h1>
      </div>

    <div class="row justify-content-center searchbar m-0">
      <div class="col-sm-8 ">
        <%= form_with url: games_path, method: :get, class: "d-flex index-search search-bar" do %>
          <%= text_field_tag :query,
                params[:query],
                class: "form-control",
                placeholder: "Type a location"
            %>
          <%= submit_tag "Search" , name: "", class: " btn-fcard" %>
        <% end %>
      </div>
    </div>

    <div class="heading-container">
      <h1 class="index-headertwo"> Available: <small class="results-count"><%= @games_count %> Games</small></h1>
    </div>
      <div class="card-container">
        <div class="row full-games-card h-100 m-0 indexcards">
          <% @games.each do |game| %>
            <div class="col-md-6">
              <%= link_to game_path(game), class: "text-decoration-none text-white" do %>
                <div class="game-card">
                  <div class="game-card-body d-flex justify-content-between">
                    <!-- Car image column -->
                    <div class="col-md-10 car-div d-flex ">
                        <div class="description-title">
                          <h5 class="game-card-title"><%= "#{game.location}" %></h5>
                          <h5 class="game-card-date"><%= "#{game.date.strftime("%m-%e-%y %H:%M")}" %></h5>
                          <h5 class="game-card-host"><%= "Host: #{game.user.first_name}" %></h5>
                          <div class="d-flex">
                            <h5 class="game-card-size"><%= "#{game.game_size}-a-side"%></h5>
                            <h5 class="game-card-size"><%= "#{game.level}"%></h5>
                          </div>
                        </div>
                        <div class="col-md-2 d-flex justify-content-end">
                          <div class="text-end game-price">
                            <h5 class="price-text">Â£<%= "#{game.price.round} / player" %></h5>

                          </div>
                        </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
            <div class="nav-button-container">
        <%= link_to games_path(page: params[:page].nil? ? 1 : params[:page].to_i - 1 ), class: "prev" do %>
          <i class="fa-solid fa-circle-left fa-2xl"></i>
        <% end %>
        <%= link_to games_path(page: params[:page].nil? ? 1 : params[:page].to_i + 1 ), class: "next" do %>
          <i class="fa-solid fa-circle-right fa-2xl"></i>
        <% end %>
      </div>
        </div>
      </div>
</div>

<style>
  body {
    overflow: hidden;
  }
</style>
